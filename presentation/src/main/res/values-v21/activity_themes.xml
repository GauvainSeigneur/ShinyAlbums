<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="ShinyAlbumsTheme.Transparent">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>
    

    <!-- Theme for ActivityDetail (applying some transition) -->
    <style name="ShinyAlbumsTheme.Transparent.AlbumDetails">
        <item name="android:windowSharedElementsUseOverlay">false</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowSharedElementEnterTransition">@transition/activity_detail_s_e_enter</item>
        <item name="android:windowSharedElementReturnTransition">@transition/activity_detail_s_e_return</item>
        <item name="android:windowEnterTransition">@transition/activity_detail_enter</item>
        <item name="android:windowReturnTransition">@transition/activity_detail_return</item>
    </style>

    <!-- Theme for ActivityMain (applying some transition) -->
    <style name="ShinyAlbumsTheme.UserAlbums">
        <item name="android:windowBackground">@color/colorBackground</item>
        <item name="android:windowSharedElementsUseOverlay">false</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowExitTransition">@transition/activity_user_albums_exit</item>
        <item name="android:windowReenterTransition">@transition/activity_user_albums_reenter</item>
    </style>
</resources>