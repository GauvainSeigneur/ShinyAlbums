<?xml version="1.0" encoding="utf-8"?>
<manifest package="com.gauvain.seigneur.shinyalbums"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <application
        android:name=".ShinyAlbumsApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/ShinyAlbumsTheme"
        android:usesCleartextTraffic="true">
        <activity android:name=".views.splash.SplashActivity"
            android:theme="@style/ShinyAlbumsTheme.SlpashActivityTheme"/>
        <activity android:name=".views.albumDetails.AlbumDetailsActivity"
            android:theme="@style/ShinyAlbumsTheme.Transparent.AlbumDetails"/>
        <activity android:name=".views.userAlbums.UserAlbumsActivity"
            android:theme="@style/ShinyAlbumsTheme.UserAlbums">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

    <uses-permission android:name="android.permission.INTERNET" />

</manifest>