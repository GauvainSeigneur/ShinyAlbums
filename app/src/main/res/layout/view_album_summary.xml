<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/detailsHeaderContentView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_collapseMode="parallax"
    app:layout_collapseParallaxMultiplier="0.25">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/gradientBackground"
        android:scaleType="fitXY"
        android:layout_marginTop="@dimen/space_xxl"
        android:layout_width="@dimen/detail_album_item_cover_background_size"
        android:layout_height="@dimen/detail_album_item_cover_background_size"
        app:srcCompat="@drawable/ic_square_gradient"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <View
        android:id="@+id/collapsingCoverPlaceHolder"
        android:layout_width="@dimen/detail_album_item_cover_size"
        android:layout_height="@dimen/detail_album_item_cover_size"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/gradientBackground"
        app:layout_constraintBottom_toBottomOf="@id/gradientBackground"/>

    <TextView
        android:id="@+id/albumTitleTextView"
        android:textAppearance="@style/TextAppearance.Album.Details.Title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/space_m"
        android:paddingStart="@dimen/space_m"
        android:paddingEnd="@dimen/space_m"
        android:textAlignment="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/collapsingCoverPlaceHolder" />

    <TextView
        android:id="@+id/albumArtistYearTextView"
        android:textAppearance="@style/TextAppearance.Album.Details.Artist"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:paddingTop="@dimen/space_s"
        android:paddingStart="@dimen/space_m"
        android:paddingEnd="@dimen/space_m"
        android:paddingBottom="@dimen/space_l"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/albumTitleTextView" />

</androidx.constraintlayout.widget.ConstraintLayout>

